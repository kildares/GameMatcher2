<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.PlayerDetailFragment"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_detail_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        style="@style/ToolbarGameTheme"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >

        <TextView
            android:id="@+id/tv_title_player_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toolbar_title_match_list"
            android:textColor="@color/colorTextPrimary"
            style="@style/ToolbarGameTheme"
            />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_detail_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_player_name"
            android:layout_margin="@dimen/margin_top"
            android:textSize="@dimen/player_text_size"
            />

        <EditText
            android:id="@+id/et_detail_player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_player_name"
            android:inputType="text"
            android:importantForAutofill="no"
            android:layout_margin="@dimen/margin_top"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_detail_player_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_player_position"
            android:layout_margin="@dimen/margin_top"
            android:textSize="@dimen/player_text_size"
            />
        <EditText
            android:id="@+id/et_detail_player_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_player_position"
            android:inputType="text"
            android:importantForAutofill="no"
            android:layout_margin="@dimen/margin_top"
            />
    </LinearLayout>

    <Button
        android:id="@+id/bt_player_detail_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bt_player_detail_confirm"
        android:layout_margin="@dimen/margin_top"
        />

</LinearLayout>